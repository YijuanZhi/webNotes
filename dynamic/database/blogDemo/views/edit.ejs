<% include partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">
        Submit whatever that is on your mind!
    </div>
    <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="ui form">
        <div class="field">
            <label for="blog[title]">Title</label>
            <input type="text" name="blog[title]" value="<%=blog.title%>" required>
        </div>
        <div class="field">
            <label for="blog[image]">Image</label>
            <input type="text" name="blog[image]" value="<%=blog.image%>" required>
        </div>
        <div class="field">
            <label for="blog[body]">Post Body</label>
            <textarea name="blog[body]"><%= blog.body %></textarea>
        </div>
        <input type="submit" class="ui button basic violet big" required>
    </form>
</div>
<% include partials/footer %>