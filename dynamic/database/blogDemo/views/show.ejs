<%include partials/header%>
<div class="ui main container segment text">
    <div class="ui header huge">Welcome to <%=blog.title%></div>
    <div class="ui attached top segment">
        <div class="image">
            <img class="ui image rounded centered"src="<%=blog.image%>">
        </div>
        <div class="content">
        <span><%=blog.created.toDateString()%></span>
            <p><%=blog.body.substring(0, 100)%></p>
        </div>
        <a href="/blogs/<%=blog._id%>/edit" class="ui button basic green">Edit</a>
        <form id="delete" method="POST" action="/blogs/<%=blog._id%>?_method=DELETE">
            <button  class="ui button basic red">Delete</button>
        </form>
    </div>
    
</div>
<%include partials/footer%>