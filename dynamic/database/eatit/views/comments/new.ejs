<% include ../partials/header %>
<div class="container">
    <div class="jumbotron text-center">
        <h1 class="display-3">Add New Comment to <%= photo.name%></h1>
        <p class="lead mb-1">Please be friendly and kind!</p>
    </div>
</div>

<div class="container">
    <div class="upload-area">
        <form action="/items/<%= photo._id %>/comments" method="POST">
            <div class="form-group">
                <label for="author">Author</label>
                <input id="author" class="form-control" type="text" name="comment[author]" placeholder="Your name!">
            </div>
            <div class="form-group">
                <label for="text">Text</label>
                <input class="form-control" id="text" type="text" name="comment[text]" placeholder="Your friendly comment!">
            </div>
            <div class="form-group mt-4">
                <button type="submit" class="form-control btn btn-primary btn-lg">Submit</button>
            </div>
            
        </form>
    </div>
    
</div>
<% include ../partials/footer %>