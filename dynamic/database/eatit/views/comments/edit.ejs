<% include ../partials/header %>
<div class="container">
    <div class="jumbotron text-center">
        <h1 class="display-3">Edit Your Comment</h1>
        <p class="lead">Please be friendly to folks.</p>
    </div>
</div>

<div class="container">
    <div id="upload-area">
        <form action="/items/<%= item._id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="text">Name</label>
                <input id="text" class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
            </div>
            <div class="form-group mt-4">
                <button type="submit" class="form-control btn btn-primary btn-lg">Submit</button>
            </div>
            
        </form>
    </div>
    
</div>
<% include ../partials/footer %>