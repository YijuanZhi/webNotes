<% include ../partials/header %>
<div class="container">
    <div class="jumbotron text-center">
        <h1 class="display-3">Add Your Favourite Photo</h1>
        <p class="lead">Any beautiful or funny photos are welcomed!</p>
    </div>
</div>

<div class="container">
    <div id="upload-area">
        <form action="/items" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input id="name" class="form-control" type="text" name="name" placeholder="Enter the name of the photo">
            </div>
            <div class="form-group">
                <label for="url">URL</label>
                <input id="url" class="form-control" type="text" name="url" placeholder="Enter the url of the photo">
            </div>
            <div class="form-group mt-4">
                <button type="submit" class="form-control btn btn-primary btn-lg">Submit</button>
            </div>
            
        </form>
    </div>
    
</div>
<% include ../partials/footer %>