<% include ../partials/header %>
<div class="container">
    <div class="jumbotron text-center">
        <h1 class="display-3">Edit Your Photo: <%= item.name %></h1>
        <p class="lead">Make your beautiful photo more welcomed!</p>
    </div>
</div>

<div class="container">
    <div id="upload-area">
        <form action="/items/<%= item._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input id="name" class="form-control" type="text" name="photo[name]" value="<%= item.name %>">
            </div>
            <div class="form-group">
                <label for="url">URL</label>
                <input id="url" class="form-control" type="text" name="photo[url]" value="<%= item.url %>">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input id="description" class="form-control" type="text" name="photo[description]" value="<%= item.description%>">
            </div>
            <div class="form-group mt-4">
                <button type="submit" class="form-control btn btn-primary btn-lg">Submit</button>
            </div>
            
        </form>
    </div>
    
</div>
<% include ../partials/footer %>